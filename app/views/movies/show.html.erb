<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 99%), url(<%=image_path('curtain_new.png')%>">
  <div class="banner-content movie-show">
    <div class="row">
      <%= image_tag(@movie.picture_url) %>
      <h2><%= @movie.title %> (<%= @movie.year %>)</h2>
    </div>
    <p><b>Emoji Synopsis:</b> <%= image_tag(@movie.emoji_group) %></p>
    <p><b>Plot Synopsis:</b> <%= @movie.synopsis %></p>
    <p><b>Director:</b> <%= @movie.directors %></p>
    <p><b>Cast:</b> <%= @movie.actors %></p>
    <p><b>Length:</b> <%= @movie.length %> minutes</p>
    <a href=<%= @movie.url %> target="_blank" class="btn btn-search">Watch Now</a>
  </div>
</div>